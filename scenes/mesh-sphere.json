                "reflection": 1,
                "n": 1.33,
                "glossyness": 1,

                "file": "./meshes/sphere.off",

                "z-dir": "z",
                "y-dir": "y",

                "use-octree": true
            }
        },

        "lights": {

            "ambient": {

                "type": "ambient",
                "intensity": { "r": 0.2, "g": 0.2, "b": 0.2 }
