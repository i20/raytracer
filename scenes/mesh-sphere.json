{
    "colors": {

        "black": { "r": 0, "g": 0, "b": 0 },
        "white": { "r": 255, "g": 255, "b": 255 },

        "red": { "r": 255, "g": 0, "b": 0 },
        "green": { "r": 0, "g": 255, "b": 0 },
        "blue": { "r": 0, "g": 0, "b": 255 },

        "orange": { "r": 255, "g": 128, "b": 0 }
    },

    "positions": {

        "origin": { "x": 0, "y": 0, "z": 0 }
    },

    "vectors": {

        "x": { "x": 1, "y": 0, "z": 0 },
        "y": { "x": 0, "y": 1, "z": 0 },
        "z": { "x": 0, "y": 0, "z": 1 }
    },

    "scene": {

        "title": "Mesh sphere",
        "background-color": "black",

        "objects": {

            "axis-x": {

                "type": "cylinder",
                "color": "red",
                "position": "origin",
                "glassy": false,

                "coeff": {
                    "ambient": { "r": 1, "g": 1, "b": 1 },
                    "diffuse": { "r": 1, "g": 1, "b": 1 },
                    "specular": { "r": 1, "g": 1, "b": 1 }
                },

                "reflection": 1,
                "n": 0,
                "glossyness": 1,

                "z-dir": "x",
                "y-dir": "y",

                "radius": 0.025,
                "height": 1.5
            },

            "axis-y": {

                "type": "cylinder",
                "color": "green",
                "position": "origin",
                "glassy": false,

                "coeff": {
                    "ambient": { "r": 1, "g": 1, "b": 1 },
                    "diffuse": { "r": 1, "g": 1, "b": 1 },
                    "specular": { "r": 1, "g": 1, "b": 1 }
                },

                "reflection": 1,
                "n": 0,
                "glossyness": 1,

                "z-dir": "y",
                "y-dir": "z",

                "radius": 0.025,
                "height": 1.5
            },

            "axis-z": {

                "type": "cylinder",
                "color": "blue",
                "position": "origin",
