                    "specular": { "r": 1, "g": 1, "b": 1 }
                },

                "reflection": 1,
                "n": 0,
                "glossyness": 1,

                "z-dir": "z",
                "y-dir": "x",

                "radius": 0.025,
                "height": 1.5
            },

            "sphere-mesh": {

                "type": "mesh",
                "position": "origin",
                "shading": "phong",
                "color": "orange",
                "glassy": false,

                "coeff": {
                    "ambient": { "r": 1, "g": 1, "b": 1 },
                    "diffuse": { "r": 1, "g": 1, "b": 1 },
                    "specular": { "r": 1, "g": 1, "b": 1 }
