        "white": { "r": 255, "g": 255, "b": 255 },

        "red": { "r": 255, "g": 0, "b": 0 },
        "green": { "r": 0, "g": 255, "b": 0 },
        "blue": { "r": 0, "g": 0, "b": 255 }
    },

    "positions": {

        "origin": { "x": 0, "y": 0, "z": 0 }
